{
  "productName": "desktop-clock",
  "version": "0.0.1",
  "identifier": "com.desktop-clock.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "url": "manager.html",
        "label": "manager",
        "title": "Manager",
        "width": 320,
        "height": 160
      },
      {
        "url": "clock.html",
        "label": "clock",
        "title": "Clock",
        "width": 320,
        "height": 160,
        "resizable": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
