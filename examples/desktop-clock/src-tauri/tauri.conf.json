{
  "productName": "desktop-clock",
  "version": "0.0.1",
  "identifier": "com.desktop-clock.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "url": "main.html",
        "label": "main",
        "width": 320,
        "height": 160,
        "title": "Desktop Clock",
        "resizable": false,
        "decorations": false,
        "transparent": true
      },
      {
        "url": "manager.html",
        "label": "manager",
        "width": 400,
        "height": 200,
        "title": "Desktop Clock Manager",
        "resizable": false
      }
    ],
    "trayIcon": {
      "id": "tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Desktop Clock"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
